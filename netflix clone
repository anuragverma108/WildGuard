    <script>
        const api = "api_key=a8d3f593c3934ff26d192538b7493c41";
        const base = "https://api.themoviedb.org/3";
        const bannerBase = "https://image.tmdb.org/t/p/original";
        const imgBase = "https://image.tmdb.org/t/p/w200";

        const requests = {
            fetchTrending: `${base}/trending/all/week?${api}&language=en-US`,
            fetchNetflixOriginals: `${base}/discover/tv?${api}&with_networks=213`,
        };

        fetch(requests.fetchNetflixOriginals)
            .then((res) => res.json())
            .then((data) => {
                const setMovie =
                    data.results[Math.floor(Math.random() * data.results.length - 1)];

                var bannerElement = document.getElementById("banner");
                var titleElement = document.getElementById("title");

                bannerElement.style.backgroundImage =
                    "url(" + bannerBase + setMovie.backdrop_path + ")";
                titleElement.innerText = setMovie.name;
            });
    </script>
